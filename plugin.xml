    <source-file src="src/ios/DBCamera/DBCollectionViewCell.m" />

    <header-file src="src/ios/DBCamera/DBCollectionViewFlowLayout.h" />
    <source-file src="src/ios/DBCamera/DBCollectionViewFlowLayout.m" />

    <header-file src="src/ios/DBCamera/DBLibraryManager.h" />
    <source-file src="src/ios/DBCamera/DBLibraryManager.m" />

    <header-file src="src/ios/DBCamera/UIImage+Crop.h" />
    <source-file src="src/ios/DBCamera/UIImage+Crop.m" />

  </platform>
</plugin>
