<?xml version='1.0' encoding='utf-8'?>
<plugin id="com.vulume.dbcamera" version="0.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
  <name>dbcamera</name>
  <js-module name="dbcamera" src="www/dbcamera.js">
    <clobbers target="cordova.plugins.dbcamera" />
  </js-module>
  <platform name="ios">
    <config-file parent="/*" target="config.xml">
      <feature name="DBCamera">
        <param name="ios-package" value="CDVdbcamera" />
      </feature>
    </config-file>

    <source-file src="src/ios/CDVdbcamera.m" />

    <framework src="AVFoundation.framework" />
    <framework src="CoreMedia.framework" />
    <framework src="QuartzCore.framework" />

    <resource-file src="src/ios/DBCamera/Resources/DBCameraImages.xcassets" />

    <header-file src="src/ios/DBCamera/DBCameraViewController.h" />
    <source-file src="src/ios/DBCamera/DBCameraViewController.m" />

    <header-file src="src/ios/DBCamera/DBCameraCollectionController.h" />
    <source-file src="src/ios/DBCamera/DBCameraCollectionController.m" />

    <header-file src="src/ios/DBCamera/DBCameraSegueViewController.h" />
    <source-file src="src/ios/DBCamera/DBCameraSegueViewController.m" />

    <header-file src="src/ios/DBCamera/DBCameraContainer.h" />
    <source-file src="src/ios/DBCamera/DBCameraContainer.m" />

    <header-file src="src/ios/DBCamera/DBCameraDelegate.h" />

    <header-file src="src/ios/DBCamera/DBCameraGridView.h" />
    <source-file src="src/ios/DBCamera/DBCameraGridView.m" />

    <header-file src="src/ios/DBCamera/DBCameraImageView.h" />
    <source-file src="src/ios/DBCamera/DBCameraImageView.m" />

    <header-file src="src/ios/DBCamera/DBCameraLibrary.h" />
    <source-file src="src/ios/DBCamera/DBCameraLibrary.m" />

    <header-file src="src/ios/DBCamera/DBCameraMacros.h" />

    <header-file src="src/ios/DBCamera/DBCameraManager.h" />
    <source-file src="src/ios/DBCamera/DBCameraManager.m" />

    <header-file src="src/ios/DBCamera/DBCameraSegueView.h" />
